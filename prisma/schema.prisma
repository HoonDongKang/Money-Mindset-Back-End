// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User{
  idx  Int   @id @default(autoincrement())
  email String  @unique
  password  String?
  nickname String @unique
  refreshToken String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  maginot Maginot[]
  expenditure Expenditure[]
  asset Asset?
  income_Expense Income_Expense[]
}

model Maginot{
  idx  Int   @id @default(autoincrement())
  user User @relation(fields:[user_idx], references:[idx])
  user_idx Int
  ranking Int
  goal String
  amount Int
  line Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Asset{
  idx  Int   @id @default(autoincrement())
  user User @relation(fields:[user_idx], references:[idx])
  user_idx Int @unique
  amount Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  expenditure Expenditure[] @relation("userAsset")
}

model Expenditure{
  idx  Int   @id @default(autoincrement())
  asset Asset @relation("userAsset",fields:[asset_idx], references:[idx])
  asset_idx Int
  user User @relation(fields:[user_idx], references:[idx])
  user_idx Int
  fixed_expenditure String
  expenditure_amount Int
}

model Income_Expense{
  idx  Int   @id @default(autoincrement())
  user User @relation(fields:[user_idx], references:[idx])
  user_idx Int
  type String
  category String
  amount Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}